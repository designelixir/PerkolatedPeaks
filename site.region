<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes} sky-narrow">
      {@|apply shortNavigation.block}
      <div class="title-layer flex-center-center">
      {.section website}
          <h1 class="site-title-heading container-padding hover" data-content-field="site-title">
            <a href="/" class="site-title-link">{collection.title}</a>
          </h1>
        {.end}
      </div>

      <main class="content-container" role="main" data-content-field="main-content">
       <squarespace:block-field id="aboutContent" columns="12" style="min-width: 50px; border: 1px solid lime;"/>
       <squarespace:block-field id="menuContent" columns="12" style="min-width: 50px; border: 1px solid lime;"/>
       <squarespace:block-field id="shopContent" columns="12" style="min-width: 50px; border: 1px solid lime;"/>
       
       {squarespace.main-content}
      </main>

      {@|apply footer.block}
    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>
