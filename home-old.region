<!doctype html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollToPlugin.min.js"></script>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    {squarespace-headers}
  </head> 
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    
      {@|apply homepageScene.block}
      {@|apply footer.block}
    <div class="site-container home-container" id="home-container">
      
      <header class="flex-center-center">
        <img src="{website.logoImageUrl}" onclick="window.open('/', '_self')" class="nav-logo hover container-padding" id="perk-peaks-logo" alt="Perkolated Peaks Logo"/>
      </header>

      <div style="border: 2px solid teal; width: 100%; height: 100vh;" >
        <div id="about">
          <div class="section-wrapper flex-center-center flex-column">
            <h1 class="section-h1">About</h1>
            <div class="section-buttons flex-center-center">
              <button>Hours</button>
              <button>Directions</button>
            </div>
            <p class="section-p">Perkolated Peaks is a Volkswagen bus turned coffee shop in Twin Lakes village! Stop by for coffee, tea, and burritos.<br><br>6495 East State Highway 82, Twin Lakes, CO</p>
            
            </div>
        </div>
        <div id="menu" style='height: 60vh; width: 100%; border: 2px solid blue; display: none; margin-top: 15vh'>
          <h1 style="text-align: center; padding-top: 80px; margin-bottom: 100px; font-size: 72px; line-height: 0px; ">Menu</h1>
          <p style="font-size: 24px; padding: 25px; margin: 0px 50px; background: rgba(255,255,255,0.75)">Here is some details about us. Here is some details about us. Here is some details about us. Here is some details about us. Here is some details about us. Here is some details about us. </p>
        </div>
        <div id="shop" style='height: 60vh; width: 100%; border: 2px solid blue; display: none; margin-top: 15vh'>
          <h1 style="text-align: center; padding-top: 80px; margin-bottom: 100px; font-size: 72px; line-height: 0px; ">Shop</h1>
          <p style="font-size: 24px; padding: 25px; margin: 0px 50px; background: rgba(255,255,255,0.75)">Here is some details about us. Here is some details about us. Here is some details about us. Here is some details about us. Here is some details about us. Here is some details about us. </p>
        </div>
          
        </div>
        {#  <div style="border: 2px solid yellow; height: 60vh; margin-top: 20vh; width: 100%;">
          <div style="border: 2px solid lime; height: 18vh; width: 100%;" class="flex-start-start">
            <div style="width: 15vw; min-width: 15vw; height: 42vh; margin-top: 18vh; border: 2px solid orange;"></div>
            <div style="width: 17vw; height: 42vh; margin-top: 18vh; border: 2px solid orange;"></div>
            <div style="width: 24vw; height: 42vh; margin-top: 18vh; border: 2px solid orange;"></div>
            <div style="width: 20%; min-width: 22vw; height: 42vh; margin-top: 18vh; border: 2px solid orange;"></div>
          </div>
        </div>  }
      </div>

      <squarespace:navigation navigationId="mainNav" template="homepageNav" />
    </div>

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>
